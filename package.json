{
  "name": "graphite-cli-clone",
  "version": "1.0.0",
  "description": "A Graphite CLI clone for managing stacked pull requests using GitHub GraphQL API",
  "main": "dist/index.js",
  "bin": {
    "stax": "dist/index.js"
  },
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/index.js"
  },
  "keywords": [
    "git",
    "github",
    "graphql",
    "cli",
    "pull-request",
    "stacked-prs"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "@octokit/graphql": "^7.0.0",
    "simple-git": "^3.20.0",
    "conf": "^12.0.0",
    "chalk": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "prettier": "^3.0.0"
  }
}
